<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<modDesc descVersion="47">
    <author>Wopster</author>
    <version>1.0.0.0</version>
    <title>
        <en>ProSeed</en>
    </title>
    <description>
        <en>
            <![CDATA[ProSeed mod]]>
        </en>
    </description>
    <iconFilename>icon.png</iconFilename>
    <multiplayer supported="true"/>

    <extraSourceFiles>
        <sourceFile filename="src/loader.lua"/>
    </extraSourceFiles>

    <actions>
        <action name="PS_SET_LANES_TILL_TRAMLINE" axisType="HALF"/>
        <action name="PS_SET_HALF_SIDE_SHUTOFF" axisType="HALF"/>
        <action name="PS_TOGGLE_MOUSE_CURSOR" axisType="HALF"/>
    </actions>

    <inputBinding>
        <actionBinding action="PS_SET_LANES_TILL_TRAMLINE">
            <binding device="KB_MOUSE_DEFAULT" input="KEY_lctrl KEY_r"/>
            <binding device="GAMEPAD_DEFAULT" input="BUTTON_11"/>
        </actionBinding>
        <actionBinding action="PS_SET_HALF_SIDE_SHUTOFF">
            <binding device="KB_MOUSE_DEFAULT" input="KEY_lctrl KEY_t"/>
            <binding device="GAMEPAD_DEFAULT" input="BUTTON_11"/>
        </actionBinding>
        <actionBinding action="PS_TOGGLE_MOUSE_CURSOR">
            <binding device="KB_MOUSE_DEFAULT" input="MOUSE_BUTTON_MIDDLE"/>
            <binding device="GAMEPAD_DEFAULT" input="BUTTON_11"/>
        </actionBinding>
    </inputBinding>

    <l10n>
        <text name="input_PS_SET_HALF_SIDE_SHUTOFF">
            <en>PS: Toggle halfside shutoff</en>
            <de>PS: Halbseitige Abschaltung</de>
        </text>
        <text name="input_PS_SET_LANES_TILL_TRAMLINE">
            <en>PS: Lines till tramline</en>
            <de>PS: Lines till tramline</de>
        </text>
        <text name="input_PS_TOGGLE_MOUSE_CURSOR">
            <en>PS: Toggle mouse cursor</en>
            <de>PS: Toggle mouse cursor</de>
        </text>
        <text name="function_toggleMouseCursor">
            <en>Toggle mouse cursor</en>
            <de>Toggle mouse cursor</de>
        </text>
        <text name="function_toggleHalfSideShutoff">
            <en>Toggle halfside shutoff</en>
            <de>Halbseitige Abschaltung</de>
        </text>
        <text name="function_setTramlineDistance">
            <en>Set line distance</en>
            <de>Fahrgassen Abstand</de>
        </text>
    </l10n>
</modDesc>
